<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3eded"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="#f3eded" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <FrameLayout
            android:id="@+id/quanHeaderIconLayout"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp" >

            <ImageView
                android:id="@+id/quanHeaderIcon"
                android:layout_width="54dp"
                android:layout_height="54dp" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:background="@drawable/circle_head_bg" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="23dp"
            android:layout_toRightOf="@+id/quanHeaderIconLayout"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/quanTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十月怀胎"
                android:textColor="#d89e01"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/quanPostNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/quan_pnum"
                    android:drawablePadding="3dp"
                    android:text="帖子数："
                    android:textColor="#9e9b92"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/quanReplyNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/rep_btn"
                    android:drawablePadding="3dp"
                    android:text="回帖数："
                    android:textColor="#9e9b92"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>