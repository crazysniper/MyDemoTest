<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:match="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity" >

    <com.gftest.myappclient.ui.text.MatchTextView
        android:id="@+id/mMatchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        match:text="yingwen" />

    <SeekBar
        android:id="@+id/mSeekBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mMatchTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:max="100" />

    <com.gftest.myappclient.ui.text.MatchButton
        android:id="@+id/mButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mSeekBar"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        match:text="Yes" />

</RelativeLayout>