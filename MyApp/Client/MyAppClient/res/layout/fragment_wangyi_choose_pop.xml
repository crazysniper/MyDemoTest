<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff3e3e3e"
    android:minHeight="36dip"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/read"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/listpage_more_speech"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="读文章"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/collect"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/listpage_more_like"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="收藏"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/nointerest"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:drawableLeft="@drawable/listpage_more_dislike"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="不感兴趣"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dislike_bg"
        android:src="@drawable/listpage_more_close" />

</LinearLayout>